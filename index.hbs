{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The content area on the blog page --}}
<main id="main" class="site-content">
    {{^is "paged"}}
        <div class="cover cover-large outer hero">
            {{#if @site.cover_image}}
                <div class="cover-bg">
                    <img class="cover-bg-img" srcset="{{img_url @site.cover_image size="s"}} 300w, {{img_url @site.cover_image size="m"}} 600w, {{img_url @site.cover_image size="l"}} 800w, {{img_url @site.cover_image size="xl"}} 1600w, {{img_url @site.cover_image size="xxl"}} 2000w" sizes="100vw" src="{{img_url @site.cover_image size="xl"}}" alt="" />
                </div>
            {{/if}}
            <div class="cover-content inner">
                {{#if @custom.hero_title}}
                    <h2 class="hero-title h1 underline">{{@custom.hero_title}}</h2>
                {{/if}}
                {{#if @custom.hero_text}}
                    <p class="hero-text">{{@custom.hero_text}}</p>
                {{/if}}
                {{#if @custom.hero_button_label}}
                    {{#if @custom.hero_button_url}}
                        <div class="hero-action">
                            <a class="button button-solid" href="{{@custom.hero_button_url}}">
                                {{@custom.hero_button_label}}
                            </a>
                        </div>
                    {{/if}}
                {{/if}}
                <a href="#post-list" class="cover-scroll-down button button-icon" data-scroll>
                    <span class="screen-reader-text">{{t "Scroll Down"}}</span>
                    {{> "icons/chevron-down"}}
                </a>
            </div>
        </div>
    {{/is}}
    {{!-- Includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}
</main>
