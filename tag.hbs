{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The main content area on the tag page --}}
<main id="main" class="site-content">
    {{#tag}}
    <header class="cover outer page-header">
        {{#if feature_image}}
            <div class="cover-bg">
                <img class="cover-bg-img" srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 800w, {{img_url feature_image size="xl"}} 1600w, {{img_url feature_image size="xxl"}} 2000w" sizes="100vw" src="{{img_url feature_image size="xl"}}" alt="" />
            </div>
        {{/if}}
        <div class="cover-content inner">
            <div class="post-count">
                {{plural ../pagination.total empty=(t "No posts in") singular=(t "% post in") plural=(t "% posts in")}}
            </div>
            <h1 class="page-title h2 underline">{{name}}</h1>
            {{#if description}}
                <p class="page-description">{{description}}</p>
            {{/if}}
        </div>
    </header>
    {{/tag}}
    {{!-- Includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}
</main>
