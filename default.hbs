<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    {{!-- Document Settings --}}
    <meta charset="utf-8">
    {{!-- Page Meta --}}
    <title>{{meta_title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{!-- Styles --}}
    {{> custom-fonts}}
    <link rel="preload" as="style" href="{{asset "css/style.css"}}">
    <link href="{{asset "css/style.css"}}" rel="stylesheet" />
    {{!-- Outputs SEO meta+structured data and other important settings --}}
    {{ghost_head}}
</head>
<body class="{{body_class}}">
    <div id="page" class="site">
        {{!-- Includes the theme header - partials/header.hbs --}}
        {{> header}}
        {{!-- Includes the main content --}}
        {{{body}}}
        {{!-- Includes the theme sidebar - partials/sidebar.hbs --}}
        {{> sidebar}}
        {{!-- Includes the theme footer - partials/footer.hbs --}}
        {{> footer}}
    </div>
    {{!-- Scripts --}}
    <script src="{{asset "js/index.js"}}"></script>
    {{!-- Outputs important scripts and data --}}
    {{ghost_foot}}
</body>
</html>
