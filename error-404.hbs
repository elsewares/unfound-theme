{{!< default-custom}}
{{!-- The tag above means - insert everything in this file into the {body} of the default-custom.hbs template --}}

{{#contentFor "custom-meta-title"}}{{statusCode}}{{/contentFor}}

<body class="custom-template">
    {{#if @site.cover_image}}
        <div class="cover-bg">
            <img class="cover-bg-img" srcset="{{img_url @site.cover_image size="s"}} 300w, {{img_url @site.cover_image size="m"}} 600w, {{img_url @site.cover_image size="l"}} 800w, {{img_url @site.cover_image size="xl"}} 1600w, {{img_url @site.cover_image size="xxl"}} 2000w" sizes="100vw" src="{{img_url @site.cover_image size="xl"}}" alt="" />
        </div>
    {{/if}}
    <div id="page" class="site site-error">
        <main id="main" class="site-content outer">
            <div class="inner">
                <h1 class="page-title underline">{{t "404: Page Not Found"}}</h1>
                <p class="page-description">{{t "The thing you were looking for is no longer here or never was."}}</p>
                <p>
                    <a class="button button-link go-back-button" href="{{@site.url}}">
                        <span class="button-content">{{t "Go to the front page"}}</span>
                        {{> "icons/arrow-right"}}
                    </a>
                </p>
            </div>
        </main>
    </div>
    {{!-- Outputs important scripts and data --}}
    {{ghost_foot}}
</body>

