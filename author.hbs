{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The content area on the author page --}}
<main id="main" class="site-content">
    {{!-- Everything inside the #author tags pulls data from the author --}}
    {{#author}}
    <header class="cover page-header outer">
        {{#if cover_image}}
            <div class="cover-bg">
                <img class="cover-bg-img" srcset="{{img_url cover_image size="s"}} 300w, {{img_url cover_image size="m"}} 600w, {{img_url cover_image size="l"}} 800w, {{img_url cover_image size="xl"}} 1600w, {{img_url cover_image size="xxl"}} 2000w" sizes="100vw" src="{{img_url cover_image size="xl"}}" alt="" />
            </div>
        {{/if}}
        <div class="cover-content inner">
            {{#if profile_image}}
                <div class="author-avatar">
                    <img class="avatar" srcset="{{img_url profile_image size="xs"}}, {{img_url profile_image size="s"}} 2x" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                </div>
            {{/if}}
            <div class="post-count">
                {{plural ../pagination.total empty=(t "No posts by") singular=(t "% post by") plural=(t "% posts by")}}
            </div>
            <h1 class="page-title h2 underline">{{name}}</h1>
            {{#if bio}}
                <p class="page-description">{{bio}}</p>
            {{/if}}
            <div class="author-links">
                {{#if location}}
                    <span class="author-link">{{> "icons/map-marker-alt"}} {{location}}</span>
                {{/if}}
                {{#if website}}
                    <span class="author-link">{{> "icons/link"}} <a href="{{website}}" target="_blank" rel="noopener">{{t "Website"}}</a></span>
                {{/if}}
                {{#if facebook}}
                    <span class="author-link">{{> "icons/facebook"}} <a href="{{facebook_url}}" target="_blank" rel="noopener">Facebook</a></span>
                {{/if}}
                {{#if twitter}}
                    <span class="author-link">{{> "icons/twitter"}} <a href="{{twitter_url}}" target="_blank" rel="noopener">Twitter</a></span>
                {{/if}}
            </div>
        </div>
    </header>
    {{/author}}
    {{!-- Includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}
</main>
