{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the page --}}
{{#post}}
<main id="main" class="site-content">
    <article class="post-full {{post_class}}">
        {{#match @page.show_title_and_feature_image}}
            <header class="cover outer post-header">
                {{#if feature_image}}
                    <div class="cover-bg">
                        <img class="cover-bg-img" srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 800w, {{img_url feature_image size="xl"}} 1600w, {{img_url feature_image size="xxl"}} 2000w" sizes="100vw" src="{{img_url feature_image size="xl"}}" alt="{{title}}" />
                    </div>
                {{/if}}
                <div class="cover-content inner">
                    {{#if tags}}
                        <div class="post-tags">
                            {{tags}}
                        </div>
                    {{/if}}
                    <h1 class="post-title underline">{{title}}</h1>
                </div>
            </header>
        {{/match}}
        {{!-- If the user has access, show post content --}}
        {{#if access}}
            <div class="post-content">
                {{content}}
            </div>
        {{!-- If the user has no access, show subscribe cta --}}
        {{else}}
            {{> "members-cta"}}
        {{/if}}
    </article>
</main>
{{/post}}
