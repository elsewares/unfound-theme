<nav class="pagination outer" aria-label="{{t "Posts Navigation"}}">
    <div class="inner">
        {{#if prev}}
            <a class="newer-posts button button-icon" href="{{page_url prev}}" aria-label="{{t "Newer Posts"}}">
                {{> "icons/chevron-left"}}
            </a>
        {{/if}}
        <span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
        {{#if next}}
            <a class="older-posts button button-icon" href="{{page_url next}}" aria-label="{{t "Older Posts"}}">
                {{> "icons/chevron-right"}}
            </a>
        {{/if}}
    </div>
</nav>
